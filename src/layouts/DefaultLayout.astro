---
// src/layouts/DefaultLayout.astro
import "../styles/global.css"
---
<html lang="ja">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="stylesheet" href="https://use.typekit.net/vpb1wur.css">
  <title>mikio815.dev</title>
</head>
<body class="m-0 p-0 text-gray-800 bg-white font-sans">
  <div class="flex h-screen">
    <!-- メインナビゲーション -->
    <aside class="ml-10 w-56 fixed h-full py-12">
      <h1 class="text-3xl font-bold mb-12 tussilago">mikio815.dev</h1>
      <nav class="space-y-10">
        <div class="flex gap-6">
          <img src="/profile.svg" alt="Profile section" class="w-8 h-auto" />
          <ul class="space-y-4 futura text-2xl font-medium -translate-y-2">
            <li><a href="/profile#about" class="hover:underline">About</a></li>
            <li><a href="/profile#career" class="hover:underline">Career</a></li>
            <li><a href="/blog" class="hover:underline">Blog</a></li>
          </ul>
        </div>

        <div class="flex gap-6">
          <img src="/tech.svg" alt="Profile section" class="w-8 h-auto" />
          <ul class="space-y-4 futura text-2xl font-medium -translate-y-2">
            <li><a href="/tech#skills" class="hover:underline">Skills</a></li>
            <li><a href="/tech#works" class="hover:underline">Works</a></li>
          </ul>
        </div>

        <div class="flex gap-6 -translate-y-10">
          <img src="/contact.svg" alt="Profile section" class="w-8 h-auto" />
          <ul class="space-y-4 futura text-2xl font-medium -translate-y-2">
            <li><a href="/social" class="hover:underline">Social</a></li>
            <li><a href="/contact" class="hover:underline">Contact</a></li>
          </ul>
        </div>
      </nav>
      
    </aside>
    <div class="mt-auto px-8 pb-10 pt-12 flex space-x-8 relative z-20">
        <a href="https://github.com/mikio815" aria-label="GitHub" class="block w-6 h-6 cursor-pointer hover:text-blue-500 transition-colors duration-200">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="currentColor" class="w-full h-full">
